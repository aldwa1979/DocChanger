
@{
    ViewData["Title"] = "Import";
}

<h1>Import</h1>
<div class="container">
    <div class="tab-content">
        <div class="tab-pane active">
            <div class="row">
                @using (Html.BeginForm("Import", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        @Html.Label("File Upload", "File Upload", new { @class = "col-sm-6" })
                        <div class="col-sm-12">
                            <input type="file" id="postedFile" name="postedFile" class="form-control" accept=".csv" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-6 col-md-10">
                            <br />
                            <input type="submit" title="Upload" value="Upload" class="btn btn-default" />
                        </div>
                    </div>
                
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-10">
                            <br />
                            <span style="color:red;">
                                @ViewBag.Data
                                @ViewBag.Message
                                @ViewBag.Lenght
                            </span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
